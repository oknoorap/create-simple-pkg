  ],
  "author": "oknoorap",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oknoorap/create-simple-pkg/issues"
  },
  "homepage": "https://github.com/oknoorap/create-simple-pkg#readme",
  "devDependencies": {
    "ava": "^0.22.0",
    "cross-env": "^5.0.5",
    "xo": "^0.18.2"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false
  },
